Page {
  background: #f5f5f5; 
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
	font: normal 30rpx/1.68 -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
view{
	box-sizing: border-box;
}
image{
	font-size: 0;
}
.clear{
	overflow:hidden;
	_zoom:1;
}  
.fl{
	float: left;
}
.fr{
	float: right;
}
.no_more{
	text-align: center;
	color: #999;
	padding-top: 30rpx;
	padding-bottom: 30rpx;
}
